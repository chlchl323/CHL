
@{
    ViewData["Title"] = "Reg";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<link href="~/css/master.css" rel="stylesheet" type="text/css" />
<link href="~/css/person.css" rel="stylesheet" type="text/css" />
@using (Html.BeginForm())
{
    <div id="content">
        <div class="person_content">
            <h2>注册新用户</h2>
            <div class="person_form">
                <div class="left">
                    <div class="row">
                        <span class="title">用户名：</span><span class="info"><input name="UserName" type="text" id="ContentPlaceHolder1_txtUserName" class="input" /><span data-val-controltovalidate="ContentPlaceHolder1_txtUserName" data-val-errormessage="请输入用户名！" data-val-display="Dynamic" data-val-validationGroup="info" id="ContentPlaceHolder1_RequiredFieldValidator1" class="error_msg" data-val="true" data-val-evaluationfunction="RequiredFieldValidatorEvaluateIsValid" data-val-initialvalue="" style="display:none;">请输入用户名！</span><span data-val-controltovalidate="ContentPlaceHolder1_txtUserName" data-val-errormessage="该用户名已存在！" data-val-display="Dynamic" data-val-validationGroup="info" id="ContentPlaceHolder1_CustomValidator1" class="error_msg" data-val="true" data-val-evaluationfunction="CustomValidatorEvaluateIsValid" style="display:none;">该用户名已存在！</span></span>
                    </div>
                    <div class="row">
                        <span class="title">新密码：</span><span class="info"><input name="Password" type="password" id="ContentPlaceHolder1_txtNewPwd" class="input" /><span data-val-controltovalidate="ContentPlaceHolder1_txtNewPwd" data-val-errormessage="新密码不能为空！" data-val-validationGroup="info" id="ContentPlaceHolder1_RequiredFieldValidator2" class="error_msg" data-val="true" data-val-evaluationfunction="RequiredFieldValidatorEvaluateIsValid" data-val-initialvalue="" style="visibility:hidden;">新密码不能为空！</span></span>
                    </div>
                    <div class="row">
                        <span class="title">确认密码：</span><span class="info">
                            <input name="ReNewPwd" type="password" id="ContentPlaceHolder1_txtReNewPwd" class="input" /><span data-val-controltovalidate="ContentPlaceHolder1_txtReNewPwd" data-val-errormessage="确认密码不能为空！" data-val-display="Dynamic" data-val-validationGroup="info" id="ContentPlaceHolder1_RequiredFieldValidator3" class="error_msg" data-val="true" data-val-evaluationfunction="RequiredFieldValidatorEvaluateIsValid" data-val-initialvalue="" style="display:none;">确认密码不能为空！</span>
                            <span data-val-controltovalidate="ContentPlaceHolder1_txtReNewPwd" data-val-errormessage="两次密码输入不一致" data-val-display="Dynamic" data-val-validationGroup="info" id="ContentPlaceHolder1_CompareValidator1" class="error_msg" data-val="true" data-val-evaluationfunction="CompareValidatorEvaluateIsValid" data-val-controltocompare="ContentPlaceHolder1_txtNewPwd" data-val-controlhookup="ContentPlaceHolder1_txtNewPwd" style="display:none;">两次密码输入不一致</span>
                        </span>
                    </div>
                    <div class="row">
                        <span class="title">真实姓名：</span><span class="info"><input name="RealName" type="text" id="ContentPlaceHolder1_txtRealName" class="input" /><span data-val-controltovalidate="ContentPlaceHolder1_txtRealName" data-val-errormessage="请输入真实姓名！" data-val-validationGroup="info" id="ContentPlaceHolder1_RequiredFieldValidator4" class="error_msg" data-val="true" data-val-evaluationfunction="RequiredFieldValidatorEvaluateIsValid" data-val-initialvalue="" style="visibility:hidden;">请输入真实姓名！</span></span>
                    </div>
                    <div class="row">
                        <span class="title">性别：</span><span class="info">
                            <table id="ContentPlaceHolder1_rlSex">
                                <tr>
                                    <td><input id="ContentPlaceHolder1_rlSex_0" type="radio" name="Sex" value="男" checked="checked" /><label for="ContentPlaceHolder1_rlSex_0">男</label></td>
                                    <td><input id="ContentPlaceHolder1_rlSex_1" type="radio" name="Sex" value="女" /><label for="ContentPlaceHolder1_rlSex_1">女</label></td>
                                </tr>
                            </table>
                        </span>
                    </div>
                    <div class="row">
                        <span class="title">联系方式：</span><span class="info"><input name="Phone" type="text" id="ContentPlaceHolder1_txtPhone" class="input" /><span data-val-controltovalidate="ContentPlaceHolder1_txtPhone" data-val-errormessage="请输入联系方式！" data-val-validationGroup="info" id="ContentPlaceHolder1_RequiredFieldValidator5" class="error_msg" data-val="true" data-val-evaluationfunction="RequiredFieldValidatorEvaluateIsValid" data-val-initialvalue="" style="visibility:hidden;">请输入联系方式！</span></span>
                    </div>
                    <div class="row">
                        <span class="title">详细地址：</span><span class="info"><input name="Address" type="text" id="ContentPlaceHolder1_txtAddress" class="input" /><span data-val-controltovalidate="ContentPlaceHolder1_txtAddress" data-val-errormessage="请输入详细地址！" data-val-validationGroup="info" id="ContentPlaceHolder1_RequiredFieldValidator6" class="error_msg" data-val="true" data-val-evaluationfunction="RequiredFieldValidatorEvaluateIsValid" data-val-initialvalue="" style="visibility:hidden;">请输入详细地址！</span></span>
                    </div>
                    <div class="row_btn">
                        <input type="submit" name="Update" value="保存" class="btn_select" />
                    </div>
                </div>
                <div class="right">
                    <img src="~/images/person.bmp" />
                </div>
            </div>
        </div>
    </div>
}



