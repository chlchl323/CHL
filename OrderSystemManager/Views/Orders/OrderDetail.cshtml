@model OrderSystemManager.Models.Order;

    <style>
        th {
            text-align: center;
        }
    </style>
<div id="right">
    <div id="position">
        您当前的位置：<span id="SiteMapPath1" class="nav"><a href="#SiteMapPath1_SkipLink" style="position:absolute;left:-10000px;top:auto;width:1px;height:1px;overflow:hidden;">跳过导航链接</a><a id="SiteMapPath1_SkipLink"></a></span>
    </div>
    <div id="content" style="margin-top:20px;">

        <div id="user">
            <h4>收货人信息</h4>
            <div class="row">
                <span class="title">收货人：</span><span class="info">@Model.RealName</span>
            </div>
            <div class="row">
                <span class="title">手机号码：</span><span class="info">@Model.Phone</span>
            </div>
            <div class="row">
                <span class="title">收货地址：</span><span class="info">@Model.Address</span>
            </div>
        </div>
        <div id="detail">
            <h4>订单详细信息</h4>
            <table class="list">
                <tr>
                    <th>序号</th>
                    <th>菜品名称</th>
                    <th>图片</th>
                    <th>单价</th>
                    <th>数量</th>
                </tr>
                @{ var index = 1;}
                @foreach (var item in Model.OrderDetails)
                {
                    <tr>
                        <td>@index</td>
                        <td>@item.FoodName</td>
                        <td><img src='/@item.PicUrl' class="img_order" /></td>
                        <td>@string.Format("{0:c}", item.UnitPrice)</td>
                        <td>@item.Quatity</td>
                    </tr>
                    index++;
                }

                <tr class="total">
                    <td colspan="5">总价:@string.Format("{0:c}", Model.Totle)</td>
                </tr>
            </table>
        </div>

    </div>
</div>